bulletML(vertical,[
  'Red':bullet(dirAim(0),spdAbs(1),[action([])]),
  'Dummy':bullet(dirAim(0),spdAbs(1),[action([vanish])]),
  'Stop':action([changeSpeed(spdAbs(0),1)]),
  'XWay':action([actionRef('XWayFan',[$1,$2,0])]),
  'XWayFan':action([
    repeat($1-1,[action([fire(dirSeq($2),spdSeq($3),bullet(dirAim(0),spdAbs(1),[]))])])
  ]),
  top1:action([
    fire(dirAbs(90),spdAbs(1),bulletRef(aim2,[])),
    fire(dirAbs(- 90),spdAbs(1),bulletRef(aim2,[])),
    fire(dirAim(0),spdAbs(0),bullet(dirAim(0),spdAbs(1),[actionRef(fanRoll,[7])])),
    fire(dirAim(0),spdAbs(0),bullet(dirAim(0),spdAbs(1),[actionRef(fanRoll,[- 7])]))
  ]),
  top2:action([actionRef('3wayRoll',[13])]),
  top3:action([actionRef('3wayRoll',[- 13])]),
  '3wayRoll':action([
    fire(dirAbs(180),spdAbs(1),bulletRef('Dummy',[])),
    repeat(14,[
      action([
        fire(dirSeq(- 1.3* $1),spdAbs(1.4+ $rank*0.8),bullet(dirAim(0),spdAbs(1),[])),
        actionRef('XWay',[3,$1]),
        wait(10)
      ])
    ]),
    repeat(20,[
      action([
        fire(dirSeq(1.3* $1),spdAbs(1.4+ $rank*0.8),bullet(dirAim(0),spdAbs(1),[])),
        actionRef('XWay',[3,- $1]),
        wait(10)
      ])
    ])
  ]),
  fanRoll:action([
    fire(dirAbs($1*8),spdAbs(1),bulletRef('Dummy',[])),
    repeat(32,[
      action([
        fire(dirSeq(- $1*2.1),spdAbs(1.2+ $rank*0.4),bullet(dirAim(0),spdAbs(1),[])),
        actionRef('XWayFan',[4,$1,0.3]),
        wait(10)
      ])
    ]),
    vanish
  ]),
  aim2:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(8),
      actionRef('Stop',[]),
      repeat(14+ $rank*12,[
        action([
          wait(320/(14+ $rank*12)+ $rand),
          fire(dirAim(0),spdAbs(1.4+ $rank*0.8),bulletRef('Red',[]))
        ])
      ]),
      vanish
    ])
  ])
]).
