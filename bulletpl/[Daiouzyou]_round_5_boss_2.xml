bulletML(vertical,[
  'Red':bullet(dirAim(0),spdAbs(1),[action([])]),
  'Stop':action([changeSpeed(spdAbs(0),1)]),
  'Dummy':bullet(dirAim(0),spdAbs(1),[action([vanish])]),
  seven:bullet(dirAbs(180),spdAbs(4),[
    action([
      wait(10),
      actionRef('Stop',[]),
      repeat(5+ $rank*4,[
        action([
          fire(dirAim(- 10),spdAbs(1.5),bulletRef('Red',[])),
          fire(dirAim(10),spdAbs(1.5),bulletRef('Red',[])),
          fire(dirAim(- 5),spdAbs(1.3),bulletRef('Red',[])),
          fire(dirAim(5),spdAbs(1.3),bulletRef('Red',[])),
          fire(dirAim(- 5),spdAbs(1.7),bulletRef('Red',[])),
          fire(dirAim(5),spdAbs(1.7),bulletRef('Red',[])),
          fire(dirAim(0),spdAbs(1.5),bulletRef('Red',[])),
          wait(360/(5+ $rank*4))
        ])
      ]),
      vanish
    ])
  ]),
  fan:bullet(dirAim(0),spdAbs(4),[
    action([
      wait(10),
      actionRef('Stop',[]),
      fire(dirAim($1),spdAbs(1),bulletRef('Dummy',[])),
      repeat(35+ $rank*35,[
        action([
          fire(dirSeq($2),spdAbs($3),bullet(dirAim(0),spdAbs(1),[])),
          wait(10/(1+ $rank)+ $rand)
        ])
      ]),
      vanish
    ])
  ]),
  top:action([
    fire(dirAim(0),spdAbs(1),bulletRef(seven,[])),
    fire(dirAbs(170),spdAbs(1),bulletRef(fan,[55,10,1.8+ $rank*0.4])),
    fire(dirAbs(170),spdAbs(1),bulletRef(fan,[60,10,1+ $rank*0.2])),
    fire(dirAbs(170),spdAbs(1),bulletRef(fan,[225,10,1.4+ $rank*0.2])),
    fire(dirAbs(170),spdAbs(1),bulletRef(fan,[250,10,1.3+ $rank*0.2])),
    fire(dirAbs(- 170),spdAbs(1),bulletRef(fan,[55,- 10,1.8+ $rank*0.4])),
    fire(dirAbs(- 170),spdAbs(1),bulletRef(fan,[60,- 10,1+ $rank*0.2])),
    fire(dirAbs(- 170),spdAbs(1),bulletRef(fan,[225,- 10,1.4+ $rank*0.2])),
    fire(dirAbs(- 170),spdAbs(1),bulletRef(fan,[250,- 10,1.3+ $rank*0.2])),
    wait(360)
  ])
]).
