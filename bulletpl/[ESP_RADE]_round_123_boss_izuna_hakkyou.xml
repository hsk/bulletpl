bulletML(vertical,[
  'Red':bullet(dirAim(0),spdAbs(1),[action([])]),
  'Dummy':bullet(dirAim(0),spdAbs(1),[action([vanish])]),
  'Stop':action([changeSpeed(spdAbs(0),1)]),
  'XWay':action([actionRef('XWayFan',[$1,$2,0])]),
  'XWayFan':action([
    repeat($1-1,[action([fire(dirSeq($2),spdSeq($3),bullet(dirAim(0),spdAbs(1),[]))])])
  ]),
  roll:bullet(dirAbs(90* $1),spdAbs(3),[
    action([
      wait(10),
      actionRef('Stop',[]),
      fire(dirRel(0),spdAbs(1.5+ $rank),bulletRef('Dummy',[])),
      repeat(10,[
        action([
          wait(8),
          fire(dirSeq(5.3* $1),spdSeq(- 0.3- $rank*0.5),bullet(dirAim(0),spdAbs(1),[])),
          actionRef('XWay',[8,45]),
          repeat(5,[
            action([
              wait(8),
              fire(dirSeq(3* $1),spdSeq(0.06+ $rank*0.1),bullet(dirAim(0),spdAbs(1),[])),
              actionRef('XWay',[8,45])
            ])
          ])
        ])
      ]),
      vanish
    ])
  ]),
  top:action([
    fire(dirAim(0),spdAbs(1),bulletRef(roll,[1])),
    fire(dirAim(0),spdAbs(1),bulletRef(roll,[- 1])),
    fire(dirAbs(180),spdAbs(2),bullet(dirAim(0),spdAbs(1),[action([wait(10),actionRef('Stop',[]),actionRef(aim,[]),vanish])])),
    wait(500)
  ]),
  aim:action([
    repeat(10,[
      action([
        wait(50),
        fire(dirAim(- 1),spdAbs(1.7),bulletRef('Red',[])),
        fire(dirSeq(2),spdSeq(0),bulletRef('Red',[])),
        repeat(2+ $rank*6,[
          action([
            fire(dirSeq(- 2),spdSeq(0.1),bulletRef('Red',[])),
            fire(dirSeq(2),spdSeq(0),bulletRef('Red',[]))
          ])
        ])
      ])
    ])
  ])
]).
