bulletML(vertical,[
  top:action([
    repeat(10+ $rank*50,[
      action([
        fire(dirAim($rand*360),spdAbs(5),bulletRef(seed,[5+ $rand*10])),
        wait(20- $rank*10)
      ])
    ])
  ]),
  seed:bullet(dirAim(0),spdAbs(1),[
    action([
      changeSpeed(spdAbs(0),$1),
      wait($1),
      fire(dirAim(- 20),spdAbs(1),bulletRef('3way',[])),
      repeat(2,[action([fire(dirSeq(20),spdAbs(1),bulletRef('3way',[]))])]),
      wait(6),
      repeat(2,[
        action([
          fire(dirSeq(0),spdSeq(- 0.1),bulletRef('3way',[])),
          repeat(2,[action([fire(dirSeq(- 20),spdSeq(0),bulletRef('3way',[]))])]),
          wait(6),
          fire(dirSeq(0),spdSeq(- 0.1),bulletRef('3way',[])),
          repeat(2,[action([fire(dirSeq(20),spdSeq(0),bulletRef('3way',[]))])]),
          wait(6)
        ])
      ]),
      vanish
    ])
  ]),
  '3way':bullet(dirAim(0),spdAbs(3),[])
]).
