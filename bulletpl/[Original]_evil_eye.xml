bulletML(vertical,[
  top:action([
    fire(dirAbs(90),spdAbs(0.02),bulletRef(cannonbit,[])),
    fire(dirAbs(90),spdAbs(0.06),bulletRef(cannonbit,[])),
    fire(dirAbs(90),spdAbs(0.1),bulletRef(cannonbit,[])),
    fire(dirAbs(- 90),spdAbs(0.02),bulletRef(cannonbit,[])),
    fire(dirAbs(- 90),spdAbs(0.06),bulletRef(cannonbit,[])),
    fire(dirAbs(- 90),spdAbs(0.1),bulletRef(cannonbit,[])),
    wait(120),
    repeat(5+10* $rank,[
      action([
        actionRef('5way',[30]),
        wait(27-20* $rank),
        actionRef('5way',[20]),
        wait(27-20* $rank)
      ])
    ]),
    wait(60)
  ]),
  '5way':action([
    fire(dirAim($1* - 2),spdAbs(1.3),bulletRef(bit,[$1*2])),
    fire(dirAim($1* - 1),spdAbs(1.3),bulletRef(bit,[$1*1])),
    fire(dirAim(0),spdAbs(1.3),bulletRef(bit,[0])),
    fire(dirAim($1*1),spdAbs(1.3),bulletRef(bit,[$1* - 1])),
    fire(dirAim($1*2),spdAbs(1.3),bulletRef(bit,[$1* - 2]))
  ]),
  bit:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(30),
      fire(dirRel($1-15+30* $rand),spdAbs(1.3+1.0* $rank),bullet(dirAim(0),spdAbs(1),[])),
      repeat(2+3* $rank,[action([fire(dirSeq(0),spdSeq(0.1),bullet(dirAim(0),spdAbs(1),[]))])]),
      vanish
    ])
  ]),
  cannonbit:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(60),
      repeat(80,[action([fire(dirAbs(180),spdAbs(0.0001+12.0* $rand),bulletRef(weak,[]))])]),
      vanish
    ])
  ]),
  weak:bullet(dirAim(0),spdAbs(1),[action([wait(10),vanish])])
]).
