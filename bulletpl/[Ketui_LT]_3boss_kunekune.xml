bulletML(vertical,[
  aimSrc:bullet(dirAim(0),spdAbs(3),[
    action([
      wait(10),
      changeSpeed(spdAbs(0),1),
      repeat(5+ $rank*10,[
        action([
          wait(340/(5+ $rank*10)),
          repeat(3,[
            action([wait(2),fire(dirAim(0),spdAbs(2),bullet(dirAim(0),spdAbs(1),[]))])
          ])
        ])
      ]),
      vanish
    ])
  ]),
  circleSrc:bullet(dirAim(0),spdAbs(4),[
    action([
      wait(10),
      changeSpeed(spdAbs(0.5+ $rank),1),
      changeDirection(dirSeq(5),9999),
      repeat(200,[
        action([
          wait(2),
          fire(dirAbs(180),spdAbs(3+ $rand*0.02),bullet(dirAim(0),spdAbs(1),[]))
        ])
      ]),
      vanish
    ])
  ]),
  top:action([
    fire(dirAbs(90),spdAbs(1),bulletRef(circleSrc,[])),
    fire(dirAbs(- 90),spdAbs(1),bulletRef(circleSrc,[])),
    fire(dirAbs(135),spdAbs(1),bulletRef(aimSrc,[])),
    fire(dirAbs(- 135),spdAbs(1),bulletRef(aimSrc,[])),
    repeat(20,[
      action([
        wait(12- $rank*8),
        repeat(4+ $rank*4,[
          action([
            wait(2),
            fire(dirAbs(180),spdAbs(4),bullet(dirAim(0),spdAbs(1),[
              action([
                wait(6),
                changeSpeed(spdAbs(1),5),
                wait(20),
                changeDirection(dirAim(0),1),
                changeSpeed(spdAbs(2.2),1)
              ])
            ]))
          ])
        ])
      ])
    ])
  ])
]).
