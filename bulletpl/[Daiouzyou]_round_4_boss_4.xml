bulletML(vertical,[
  'Stop':action([changeSpeed(spdAbs(0),1)]),
  'XWay':action([actionRef('XWayFan',[$1,$2,0])]),
  'XWayFan':action([
    repeat($1-1,[action([fire(dirSeq($2),spdSeq($3),bullet(dirAim(0),spdAbs(1),[]))])])
  ]),
  'Dummy':bullet(dirAim(0),spdAbs(1),[action([vanish])]),
  fan:action([
    wait(30),
    fire(dirAbs($1),spdAbs(1.2+ $rank),bulletRef('Dummy',[])),
    actionRef('XWay',[$2,$3]),
    repeat(6,[
      action([
        wait(30),
        fire(dirSeq($4),spdSeq(0),bullet(dirAim(0),spdAbs(1),[])),
        actionRef('XWay',[$2,$3])
      ])
    ])
  ]),
  top1:action([actionRef(fan,[220,8,5,- 42.5]),actionRef(fan,[150,8,- 5,42.5])]),
  top2:action([actionRef(fan,[200,7,2.5,- 22.5]),actionRef(fan,[170,7,- 2.5,22.5])]),
  top3:action([actionRef(fan,[160,8,5,- 42.5]),actionRef(fan,[210,8,- 5,42.5])]),
  top4:action([
    wait(20),
    repeat(2,[
      action([
        repeat(36+ $rank*20,[
          action([
            fire(dirAim($rand*360),spdAbs(2),bullet(dirAim(0),spdAbs(1),[
              action([
                wait(10* $rand),
                actionRef('Stop',[]),
                wait(60),
                changeDirection(dirAim(0),1),
                changeSpeed(spdAbs(2.4),1)
              ])
            ])),
            wait(3)
          ])
        ]),
        wait(60- $rank*60)
      ])
    ])
  ])
]).
