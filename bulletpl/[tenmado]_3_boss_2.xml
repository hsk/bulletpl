bulletML(vertical,[
  top:action([
    fire(dirAbs(240),spdAbs(0.6),bulletRef(bitlaser,[60,10])),
    fire(dirAbs(- 240),spdAbs(0.6),bulletRef(bitlaser,[- 60,- 10])),
    fire(dirAbs(240),spdAbs(0.6),bulletRef(bitaim,[60,10,35])),
    fire(dirAbs(- 240),spdAbs(0.6),bulletRef(bitaim,[- 60,- 10,5])),
    wait(60),
    repeat(600/(6.0-4.0* $rank),[
      action([
        fire(dirAim(- 30+60* $rand),spdAbs(1.3+ $rank*0.7),bullet(dirAim(0),spdAbs(1),[])),
        wait(6.0-4.0* $rank)
      ])
    ]),
    wait(90)
  ]),
  bitlaser:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(120),
      changeSpeed(spdAbs(0),1),
      wait(30),
      changeDirection(dirAbs(180),1),
      changeSpeed(spdAbs(0.6),1),
      wait(90),
      fire(dirAbs($1),spdAbs(0.1),bulletRef(laser,[0.3])),
      repeat(6,[action([wait(20),fire(dirSeq($2),spdAbs(0.1),bulletRef(laser,[0.3]))])]),
      changeSpeed(spdAbs(0),1),
      wait(30),
      changeDirection(dirAbs(0),1),
      changeSpeed(spdAbs(0.8),1),
      wait(10),
      fire(dirAbs($1+3.5* $2),spdAbs(0.1),bulletRef(laser,[1.5])),
      repeat(4,[action([wait(20),fire(dirSeq(- $2),spdAbs(0.1),bulletRef(laser,[1.5]))])]),
      vanish
    ])
  ]),
  bitaim:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(120),
      changeSpeed(spdAbs(0),1),
      wait(30),
      changeDirection(dirAbs(180),1),
      changeSpeed(spdAbs(0.6),1),
      wait(40- $3),
      repeat(2,[
        action([
          wait(70),
          fire(dirAim(- 10+20* $rand),spdAbs(0.6),bullet(dirAim(0),spdAbs(1),[]))
        ])
      ]),
      wait(30+ $3),
      changeSpeed(spdAbs(0),1),
      wait(30),
      changeDirection(dirAbs(0),1),
      changeSpeed(spdAbs(0.8),1),
      wait(40- $3),
      fire(dirAim(- 10+20* $rand),spdAbs(0.6),bullet(dirAim(0),spdAbs(1),[])),
      wait(50+ $3),
      vanish
    ])
  ]),
  laser:bullet(dirAim(0),spdAbs(1),[
    action([
      fire(dirRel(0),spdAbs($1),bullet(dirAim(0),spdAbs(1),[])),
      fire(dirRel(0),spdAbs($1+0.01),bullet(dirAim(0),spdAbs(1),[])),
      fire(dirRel(0),spdAbs($1+0.02),bullet(dirAim(0),spdAbs(1),[])),
      fire(dirRel(0),spdAbs($1+0.03),bullet(dirAim(0),spdAbs(1),[])),
      fire(dirRel(0),spdAbs($1+0.04),bullet(dirAim(0),spdAbs(1),[])),
      fire(dirRel(0),spdAbs($1+0.05),bullet(dirAim(0),spdAbs(1),[])),
      vanish
    ])
  ])
]).
