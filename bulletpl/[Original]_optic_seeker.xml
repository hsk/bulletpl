bulletML(vertical,[
  top:action([
    repeat(2+8* $rank,[
      action([
        fire(dirAim(- 30+60* $rand),spdAbs(3.0+2.0* $rank),bulletRef(seal,[])),
        wait(25-20* $rank),
        repeat(3,[
          action([
            fire(dirAim(- 60+120* $rand),spdAbs(3.0+2.0* $rank),bulletRef(reflect,[])),
            wait(25-20* $rank)
          ])
        ])
      ])
    ]),
    wait(100)
  ]),
  reflect:bullet(dirAim(0),spdAbs(1),[
    action([
      wait((30+20* $rand)*(1.0-0.5* $rank)),
      repeat(3,[
        action([
          changeDirection(dirRel(60+240* $rand),1),
          wait((10+10* $rand)*(1.0-0.5* $rank))
        ])
      ]),
      changeDirection(dirAim(0),1)
    ])
  ]),
  seal:bullet(dirAim(0),spdAbs(1),[
    action([
      wait(10+10* $rand),
      changeSpeed(spdAbs(0),1),
      wait(5),
      fire(dirAim(0),spdAbs(3.0+2.0* $rank),bullet(dirAim(0),spdAbs(1),[])),
      wait(5),
      repeat(7,[
        action([
          fire(dirSeq(45),spdAbs(3.0+2.0* $rank),bullet(dirAim(0),spdAbs(1),[])),
          wait(5)
        ])
      ]),
      fire(dirAim(0),spdAbs(3.0+2.0* $rank),bullet(dirAim(0),spdAbs(1),[])),
      vanish
    ])
  ])
]).
